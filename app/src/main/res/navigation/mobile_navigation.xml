<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_events">

    <fragment
        android:id="@+id/navigation_league"
        android:name="com.man.hellosport.ui.dashboard.league.LeagueFragment"
        android:label="@string/league"
        tools:layout="@layout/fragment_league" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.man.hellosport.ui.dashboard.search.SearchFragment"
        android:label="@string/search_match"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_events"
        android:name="com.man.hellosport.ui.dashboard.events.EventsFragment"
        android:label="@string/events"
        tools:layout="@layout/fragment_events" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.man.hellosport.ui.dashboard.favorite.FavoriteFragment"
        android:label="@string/favorite"
        tools:layout="@layout/events_view" />

